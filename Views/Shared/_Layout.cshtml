        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3" style="padding: .5rem 1rem;">
            <div style="width: 100%;">
                <a class="navbar-brand">Bag Count Utility </a>
